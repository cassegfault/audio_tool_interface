        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "requests": [
                "lib/Requests"
            ]
        }
    },
    "include": [
        "src/**/*",
        "./node_modules/@types/node/index.d.ts"
    ]
}